{
  "name": "@ichack25/monorepo",
  "scripts": {
    "build:admin": "bun run --cwd apps/admin build",
    "build:server": "bun run --cwd server build",
    "check-schema": "bun run --cwd server check-schema",
    "dev:admin": "bun run --cwd apps/admin dev",
    "dev:server": "bun run --cwd server dev",
    "dev": "docker compose -f dev.docker-compose.yaml up",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "docker compose up --build",
    "test:admin": "bun run --cwd apps/admin test",
    "test:server": "bun run --cwd server test"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.14.0",
    "@types/bun": "^1.1.6",
    "@vue/test-utils": "^2.4.6",
    "bun-types": "^1.1.20",
    "happy-dom": "^14.12.3",
    "playwright-core": "^1.46.0",
    "prettier": "^3.3.2",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "server"
  ]
}
