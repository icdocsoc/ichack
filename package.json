{
  "name": "@ichack/monorepo",
  "type": "module",
  "scripts": {
    "backend:check-schema": "bash ./scripts/check-schema.sh",
    "backend:generate": "bash ./scripts/generate-schema.sh",
    "build": "concurrently -n \"website,landing\" -c \"blue,green\" \"bun run build:website\" \"bun run build:landing\"",
    "build:website": "bun --bun nuxt build",
    "build:landing": "bun --bun nuxt generate --cwd packages/www",
    "dev": "bash ./scripts/start-dev.sh",
    "preview": "docker compose up --build",
    "postinstall": "bun --bun nuxt prepare",
    "test:backend": "bash ./scripts/test-backend.sh",
    "test:e2e": "start-server-and-test 'bun dev website > /dev/null' http://my.localhost:3000 'bun dev landing > /dev/null' http://localhost:3001 'bun test:e2e:run'",
    "test:e2e:run": "playwright test",
    "test:landing": "vitest run --dir packages/www",
    "test:landing:update": "vitest --dir packages/www -u",
    "reset-db": "bun up-db && bash ./scripts/reset-db.sh && bun down-db",
    "up-db": "docker compose up -d postgres",
    "down-db": "docker compose down postgres",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.15.1",
    "@playwright/test": "^1.49.1",
    "@types/bun": "^1.1.6",
    "@types/pg": "^8.11.6",
    "@vue/test-utils": "^2.4.6",
    "bun-types": "^1.1.20",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.1",
    "happy-dom": "^15.11.7",
    "playwright": "^1.49.1",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "start-server-and-test": "^2.0.9",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "argon2",
    "esbuild",
    "nuxt-app",
    "vue-demi"
  ],
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "@iconify-json/heroicons": "^1.1.24",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@nuxt/ui": "^2.19.2",
    "@pinia/nuxt": "^0.9.0",
    "argon2": "^0.41.1",
    "build-url-ts": "^6.1.7",
    "cva": "npm:class-variance-authority",
    "drizzle-orm": "^0.38.2",
    "date-fns": "^4.1.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.5.5",
    "lucia": "^3.2.0",
    "nuxi": "^3.15.0",
    "nuxt": "^3.12.3",
    "pg": "^8.12.0",
    "picocolors": "^1.0.1",
    "pinia": "^2.2.1",
    "tailwind-merge": "^2.5.5",
    "typescript-result": "^3.1.0",
    "vue": "latest",
    "zod": "^3.23.8"
  }
}
