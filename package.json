{
  "name": "@ichack25/monorepo",
  "scripts": {
    "dev:server": "bun run --cwd server dev",
    "build:server": "bun run --cwd server build",
    "dev:admin": "bun run --cwd apps/admin dev",
    "build:admin": "bun run --cwd apps/admin build",
    "test:server": "bun run --cwd server test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "bun-types": "^1.1.20",
    "prettier": "^3.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "server"
  ],
  "dependencies": {
    "@pinia/nuxt": "^0.5.3",
    "pinia": "^2.2.1"
  }
}
