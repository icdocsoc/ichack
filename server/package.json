{
  "name": "server",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "migrate:generate": "drizzle-kit generate",
    "migrate:execute": "bun run scripts/migrate.ts",
    "migrate": "bun run migrate:generate && bun run migrate:execute",
    "test": "bash ./scripts/testServer.sh",
    "test:coverage": "bash ./scripts/testServer.sh --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "argon2": "^0.40.3",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.5.5",
    "lucia": "^3.2.0",
    "pg": "^8.12.0",
    "picocolors": "^1.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.24.0"
  }
}
